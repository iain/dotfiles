[user]
  useConfigOnly = true
  signingKey = ~/.ssh/id_ed25519.pub
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  attributesfile = ~/.gitattributes
  splitIndex = true
  untrackedCache = true
  pager = delta
[alias]
  added = diff --cached --name-only
  current = rev-parse HEAD
  initial-commit = commit --allow-empty --message \"Initial Commit\"
  new = ls-files --others --exclude-standard
  newauthor = commit --amend --reset-author -C HEAD
  ready = rebase -i @{u}
  scoreboard = "!git log | grep '^Author' | sort | uniq -ci | sort -r"
  serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  wtf = !git commit -m \"$(curl --silent --fail http://whatthecommit.com/index.txt)\"
  yolo = !git add -A && git wtf
  recent = branch --sort=-committerdate --no-column --format=\"%(committerdate:relative)%09%(refname:short)\"
  staash = stash --all
  blaame = blame -w -C -C -C
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[status]
  showStash = true
[help]
  autocorrect = 1
[diff]
  renames = copies
  tool = opendiff
  colorMoved = default
[diff "rspec"]
  xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"
[push]
  default = current
  followTags = true
[fetch]
  prune = true
  prunteTags = true
[rebase]
  autostash = true
[branch]
  autosetuprebase = always
  sort = -committerdate
[merge]
  log = true
  conflictstyle = diff3
[http]
  postBuffer = 100m
[pager]
  branch = false
[log]
  date = format:%Y-%m-%d %H:%M
[format]
  pretty = format:%C(auto,yellow) %h%C(auto,magenta)% %C(auto,blue)%>(17,trunc)%ad %C(auto,green)%<(7,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% d
[init]
  defaultBranch = main
[tag]
  gpgSign = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = osxkeychain
[commit]
  gpgSign = true
  verbose = true
[interactive]
  diffFilter = delta --color-only
[include]
  path = ~/.config/delta/themes/catppuccin.gitconfig
[delta]
  navigate = true
  features = catppuccin-mocha
[gpg]
  format = ssh
; [blame]
;   ignoreRevsFile = .git-blame-ignore-revs
[rerere]
  enabled = true
[column]
  ui = auto
[credential "https://github.com"]
  helper =
  helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
  helper =
  helper = !/opt/homebrew/bin/gh auth git-credential
